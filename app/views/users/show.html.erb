<% provide(:title, "#{@user.name}") %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= image_tag @user.picture.url, :size =>'80', :class => "picture" %>
        <%= @user.name %>
      </h1>
      <br>
      <p><%= @user.self_introduction %></p>
      <% if current_user?(@user) %>
      <p><%= link_to "プロフィールを編集", edit_user_path(current_user) %></p>
      <% end %>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.books.any? %>
      <h3>所有している本 <%= @user.books.count %>冊</h3>
      <ol>
        <%= render 'shared/shelf' %>
      </ol>
    <% end %>
  </div>
</div>
