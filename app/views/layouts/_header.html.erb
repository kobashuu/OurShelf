<header id="header-wrapper">
  <% if logged_in? %>
    <h1><%= link_to  "OurShelf", home_path %></h1>
  <% else %>
    <h1 id="header_logo"><%= link_to "OurShelf", root_path %></h1>
  <% end %>
  <div id="header-list">
    <ul class="list">
      <li>ランキング</li>
      <li>新着情報</li>
    </ul>
    <ul>
      <% if logged_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              アカウント <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "プロフィール", current_user %></li>
              <li><%= link_to "設定とプライバシー", users_setting_path_current_user %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "ログアウト", logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li class="selected"><%= link_to "ログイン", login_path %></li>
        <% end %>
    </ul>
  </div>
  <div class="clear"></div>
</header>
