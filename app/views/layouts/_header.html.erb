<header id="header-wrapper">
  <h1 id="header_logo"><%= link_to "OurShelf", root_path %></h1>
  <div id="header-list">
    <ul class="list">
      <li>ランキング</li>
      <li>新着情報</li>
    </ul>
    <ul>
      <% if logged_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= image_tag current_user.picture.url, :size =>'40' if current_user.picture? %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "プロフィール", current_user %></li>
              <li><%= link_to "設定とプライバシー", "#" %></li>
              <li><%= link_to "本棚", "#" %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "ログアウト", logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li class="selected"><%= link_to "ログイン", login_path %></li>
        <% end %>
    </ul>
  </div>
  <div class="clear"></div>
</header>
