<table>
  <tbody>
    <% @user.books.each do |book| %>
      <tr>
        <td><%= image_tag book.picture, :height => "200" %></td>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= link_to '本棚から消去', book, method: :delete, data: { confirm: '本当に消去しますか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
